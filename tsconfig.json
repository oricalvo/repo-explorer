{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": ["es2015", "dom"],
    "importHelpers": true
  },
  "include": [
    "./app/globals.d.ts",
    "./app/*main.ts",
    "./app/*app.module.ts",
    "./app/**/module.ts",
    "./app/**/*.ngfactory.ts",
    "./server/main.ts",
    "./build/main.ts",
    "./node_modules/t-rex/globals.d.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : true
  }
}
